# Flask application environment
APP_ENV=development  # development, testing, production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database configuration
DATABASE_URL=sqlite:///instance/app.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/dbname

# Redis and Celery configuration
REDIS_URL=redis://localhost:6379/0

# LinkedIn API credentials (if applicable)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# OpenAI API key for GPT integration
OPENAI_API_KEY=your-openai-api-key

# Email configuration for password reset, etc.
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# Application settings
TRIAL_DURATION=30  # Free trial duration in days

# Admin user (optional, for database initialization)
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=securepassword
# ADMIN_FIRST_NAME=Admin
# ADMIN_LAST_NAME=User
